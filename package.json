{
    "name": "@invexa/code-style",
    "type": "module",
    "version": "0.6.0",
    "description": "üìè Invexa code-style: Unified ESLint & Prettier configs for React, Next.js & Nest.js projects",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/invexa-foundation/code-style.git"
    },
    "typesVersions": {
        "*": {
            "prettier/general": [
                "src/prettier/general.d.ts"
            ],
            "prettier/tailwind": [
                "src/prettier/tailwind.d.ts"
            ]
        }
    },
    "main": "./src/index.cjs",
    "exports": {
        ".": {
            "import": "./src/index.js",
            "require": "./src/index.cjs"
        },
        "./prettier": "./src/prettier/general.cjs",
        "./prettier/general": {
            "import": "./src/prettier/general.cjs",
            "types": "./src/prettier/general.d.ts",
            "require": "./src/prettier/general.cjs"
        },
        "./prettier/tailwind": {
            "import": "./src/prettier/tailwind.cjs",
            "types": "./src/prettier/tailwind.d.ts",
            "require": "./src/prettier/tailwind.cjs"
        },
        "./types": {
            "types": "./src/types.d.ts"
        }
    },
    "files": [
        "src"
    ],
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 0",
        "release": "np --no-release-draft",
        "release:preview": "np prerelease --any-branch --no-release-draft --tag=preview"
    },
    "keywords": [],
    "author": "Invexa <dev@invexa.io>",
    "license": "UNLICENSED",
    "dependencies": {
        "@eslint/compat": "^1.2.7",
        "@eslint/js": "^9.21.0",
        "@next/eslint-plugin-next": "^15.2.2",
        "@typescript-eslint/eslint-plugin": "^8.26.1",
        "eslint-config-prettier": "^10.1.2",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "eslint-plugin-n": "^17.16.2",
        "eslint-plugin-prettier": "^5.2.3",
        "eslint-plugin-react": "^7.37.4",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-sort-export-all": "^2.1.0",
        "globals": "^16.0.0",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "typescript-eslint": "^8.25.0"
    },
    "devDependencies": {
        "@types/eslint-plugin-jsx-a11y": "^6.10.0",
        "@types/node": "^22.13.10",
        "np": "^10.2.0",
        "typescript": "^5.7.3"
    },
    "peerDependencies": {
        "eslint": "^9",
        "prettier": "^3"
    }
}
